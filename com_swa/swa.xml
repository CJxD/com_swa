<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>com_swa</name>
	<creationDate>July 2014</creationDate>
	<copyright>Copyright (C) 2014. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<author>SWA Tech Team</author>
	<authorUrl>http://studentwindsurfing.co.uk</authorUrl>
	<version>0.0.1</version>
	<description>Component for the Student Windsurfing Association website</description>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="site">
		<filename>index.html</filename>
		<filename>swa.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>assets</folder>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_swa.ini</language>
	</languages>

	<administration>

		<menu img="components/com_swa/assets/images/s_com_swa.png">COM_SWA</menu>
		<submenu>
			<menu link="option=com_swa&amp;view=members" view="members"
				  img="components/com_swa/assets/images/s_members.png" alt="Swa/Members">
				COM_SWA_TITLE_MEMBERS
			</menu>
			<menu link="option=com_swa&amp;view=universitymembers" view="universitymembers"
				  img="components/com_swa/assets/images/s_universitymembers.png" alt="Swa/UniversityMembers">
				COM_SWA_TITLE_UNIVERSITYMEMBERS
			</menu>
			<menu link="option=com_swa&amp;view=instructors" view="instructors"
				  img="components/com_swa/assets/images/s_instructors.png" alt="Swa/Instructors">
				COM_SWA_TITLE_INSTRUCTORS
			</menu>
			<menu link="option=com_swa&amp;view=events" view="events"
				  img="components/com_swa/assets/images/s_events.png" alt="Swa/Events">
				COM_SWA_TITLE_EVENTS
			</menu>
			<menu link="option=com_swa&amp;view=eventtickets" view="eventtickets"
				  img="components/com_swa/assets/images/s_eventtickets.png" alt="Swa/EventTickets">
				COM_SWA_TITLE_EVENTTICKETS
			</menu>
			<menu link="option=com_swa&amp;view=tickets" view="tickets"
				  img="components/com_swa/assets/images/s_tickets.png" alt="Swa/Tickets">
				COM_SWA_TITLE_TICKETS
			</menu>
			<menu link="option=com_swa&amp;view=tickettypes" view="tickettypes"
				  img="components/com_swa/assets/images/s_tickettypes.png" alt="Swa/TicketTypes">
				COM_SWA_TITLE_TICKETTYPES
			</menu>
			<menu link="option=com_swa&amp;view=deposits" view="deposits"
				  img="components/com_swa/assets/images/s_deposits.png" alt="Swa/Deposits">
				COM_SWA_TITLE_DEPOSITS
			</menu>
			<menu link="option=com_swa&amp;view=damages" view="damages"
				  img="components/com_swa/assets/images/s_damages.png" alt="Swa/Damages">
				COM_SWA_TITLE_DAMAGES
			</menu>
			<menu link="option=com_swa&amp;view=grants" view="grants"
				  img="components/com_swa/assets/images/s_grants.png" alt="Swa/Grants">
				COM_SWA_TITLE_GRANTS
			</menu>
			<menu link="option=com_swa&amp;view=universities" view="universities"
				  img="components/com_swa/assets/images/s_universities.png" alt="Swa/Universities">
				COM_SWA_TITLE_UNIVERSITIES
			</menu>
			<menu link="option=com_swa&amp;view=seasons" view="seasons"
				  img="components/com_swa/assets/images/s_seasons.png" alt="Swa/Seasons">
				COM_SWA_TITLE_SEASONS
			</menu>
			<menu link="option=com_swa&amp;view=races" view="races"
				  img="components/com_swa/assets/images/s_races.png" alt="Swa/Races">
				COM_SWA_TITLE_RACES
			</menu>
			<menu link="option=com_swa&amp;view=racetypes" view="racetypes"
				  img="components/com_swa/assets/images/s_racetypes.png" alt="Swa/RaceTypes">
				COM_SWA_TITLE_RACETYPES
			</menu>
			<menu link="option=com_swa&amp;view=teamresults" view="teamresults"
				  img="components/com_swa/assets/images/s_teamresults.png" alt="Swa/TeamResults">
				COM_SWA_TITLE_TEAMRESULTS
			</menu>
			<menu link="option=com_swa&amp;view=individualresults" view="individualresults"
				  img="components/com_swa/assets/images/s_individualresults.png"
				  alt="Swa/IndividualResults">
				COM_SWA_TITLE_INDIVIDUALRESULTS
			</menu>
		</submenu>

		<files folder="administrator">
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>swa.php</filename>
			<folder>controllers</folder>
			<folder>assets</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>language</folder>
		</files>

		<languages folder="administrator">
			<language tag="en-GB">language/en-GB/en-GB.com_swa.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_swa.sys.ini</language>
		</languages>

	</administration>

	<plugins>
		<plugin group="search" plugin="swa"/>
	</plugins>

</extension>
