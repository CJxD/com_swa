<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="Id"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="created_by" type="createdby" default=""
			   label="Created by"/>

		<field name="university_id" type="sql" default="1" key_field="id" value_field="name"
			   query="SELECT id, name FROM #__swa_university WHERE `state` = 1"

			   label="University"


			   required="true"
			   filter="safehtml"/>

		<field name="time" type="calendar" class="inputbox"
			   required="true"

			   default="0000-00-00 00:00:00"

			   label="Time"
			   format="%Y-%m-%d %H:%M:%S"
			   filter="safehtml"/>

		<field name="amount" type="text" size="40" class="inputbox"

			   label="Amount"


			   required="true"
			   filter="safehtml"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset"/>
		<field name="checked_out_time" type="hidden" filter="unset"/>

	</fieldset>

</form>
