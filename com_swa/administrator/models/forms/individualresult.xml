<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="COM_SWA_FORM_LBL_INDIVIDUALRESULT_ID"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="created_by" type="createdby" default=""
			   label="COM_SWA_FORM_LBL_INDIVIDUALRESULT_CREATED_BY"
			   description="COM_SWA_FORM_DESC_INDIVIDUALRESULT_CREATED_BY"/>

		<field name="user_id" type="sql" default="1" key_field="id" value_field="name"
			   query="SELECT id, name FROM #__users WHERE `block` = 0"

			   label="COM_SWA_FORM_LBL_INDIVIDUALRESULT_USER_ID"
			   description="COM_SWA_FORM_DESC_INDIVIDUALRESULT_USER_ID"


			   required="true"
			   filter="safehtml"/>

		<field name="race_id" type="sql" default="1" key_field="id" value_field="event_race_name"
			   query="SELECT race.id, CONCAT( event.name, ' - ' , race_type.name ) as event_race_name FROM i9nrq_swa_race AS race
INNER JOIN i9nrq_swa_event AS event ON race.event_id=event.id
INNER JOIN i9nrq_swa_race_type AS race_type ON race.race_type_id=race_type.id"

			   label="COM_SWA_FORM_LBL_INDIVIDUALRESULT_RACE_ID"
			   description="COM_SWA_FORM_DESC_INDIVIDUALRESULT_RACE_ID"


			   required="true"
			   filter="safehtml"/>

		<field name="result" type="text" size="40" class="inputbox"

			   label="COM_SWA_FORM_LBL_INDIVIDUALRESULT_RESULT"
			   description="COM_SWA_FORM_DESC_INDIVIDUALRESULT_RESULT"


			   required="true"
			   filter="safehtml"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset"/>
		<field name="checked_out_time" type="hidden" filter="unset"/>

	</fieldset>

</form>
