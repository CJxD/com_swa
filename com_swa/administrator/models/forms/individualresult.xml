<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="Id"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="created_by" type="createdby" default=""
			   label="Created by"/>

		<!-- The below SQL will only select ids and name of MEMBERS! -->
		<field name="user_id" type="sql" default="1" key_field="id" value_field="name"
			query="SELECT u.id as id, u.name as name FROM #__swa_member as m
			INNER JOIN #__users AS u ON m.user_id=u.id"

			   label="User"


			   required="true"
			   filter="safehtml"/>

		<field name="race_id" type="sql" default="1" key_field="id" value_field="event_race_name"
			   query="SELECT race.id, CONCAT( event.name, ' - ' , race_type.name ) as event_race_name FROM #__swa_race AS race
INNER JOIN #__swa_event AS event ON race.event_id=event.id
INNER JOIN #__swa_race_type AS race_type ON race.race_type_id=race_type.id"

			   label="Race"


			   required="true"
			   filter="safehtml"/>

		<field name="result" type="text" size="40" class="inputbox"

			   label="Result"


			   required="true"
			   filter="safehtml"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset"/>
		<field name="checked_out_time" type="hidden" filter="unset"/>

	</fieldset>

</form>
