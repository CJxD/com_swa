<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="Id"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="created_by" type="createdby" default=""
			   label="Created by"/>

		<field name="event_id" type="sql" default="1" key_field="id" value_field="name"
			   query="SELECT id, name FROM #__swa_event WHERE `state` = 1"

			   label="Event"


			   required="true"
			   filter="safehtml"/>

		<field name="application_date" type="calendar" class="inputbox"
			   required="true"

			   default="0000-00-00"

			   label="Application date"
			   filter="safehtml"/>

		<field name="amount" type="text" size="40" class="inputbox"

			   label="Amount"


			   required="true"
			   filter="safehtml"/>

		<field name="fund_use" type="text" size="40" class="inputbox"

			   label="Fund use"


			   required="true"
			   filter="safehtml"/>

		<field name="instructions" type="text" size="40" class="inputbox"

			   label="Instructions"


			   filter="safehtml"/>

		<field name="ac_sortcode" type="text" size="40" class="inputbox"

			   label="Sortcode"


			   filter="safehtml"/>

		<field name="ac_number" type="text" size="40" class="inputbox"

			   label="AC number"


			   filter="safehtml"/>

		<field name="ac_name" type="text" size="40" class="inputbox"

			   label="AC name"


			   filter="safehtml"/>

		<field name="finances_date" type="calendar" class="inputbox"


			   default="0000-00-00"

			   label="Finances date"
			   filter="safehtml"/>

		<field name="finances_id" type="text" size="40" class="inputbox"

			   label="Finances ID"


			   filter="safehtml"/>

		<field name="auth_date" type="calendar" class="inputbox"


			   default="0000-00-00"

			   label="Auth date"
			   filter="safehtml"/>

		<field name="auth_id" type="text" size="40" class="inputbox"

			   label="Auth ID"


			   filter="safehtml"/>

		<field name="payment_date" type="calendar" class="inputbox"


			   default="0000-00-00"

			   label="Payment date"
			   filter="safehtml"/>

		<field name="payment_id" type="text" size="40" class="inputbox"

			   label="Payment ID"


			   filter="safehtml"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset"/>
		<field name="checked_out_time" type="hidden" filter="unset"/>

	</fieldset>

</form>
