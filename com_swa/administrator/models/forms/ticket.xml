<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="Id"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="created_by" type="createdby" default=""
			   label="Created by"/>

		<field name="user_id" type="sql" default="1" key_field="id" value_field="name"
			   query="SELECT id, name FROM #__users WHERE `block` = 0"

			   label="User"


			   required="true"
			   filter="safehtml"/>

		<field name="event_ticket_id" type="sql" default="1" key_field="id"
			   value_field="event_ticket_name"
			   query="SELECT event_ticket.id, CONCAT( event.name, ' - ' , ticket_type.name ) as event_ticket_name FROM #__swa_event_ticket AS event_ticket
INNER JOIN #__swa_event AS event ON event_ticket.event_id=event.id
INNER JOIN #__swa_ticket_type AS ticket_type ON event_ticket.ticket_type_id=ticket_type.id"

			   label="Event ticket"


			   required="true"
			   filter="safehtml"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset"/>
		<field name="checked_out_time" type="hidden" filter="unset"/>

	</fieldset>

</form>
