<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2" method="upgrade">

    <name>SWA Universities</name>
    <creationDate>July 2014</creationDate>
    <author>SWA Tech Team</author>
    <authorUrl>http://www.studentwindsurfing.co.uk/</authorUrl>
    <version>0.0.1</version>
    <description>SWA Universities component ...</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <filename>swa_universities.php</filename>
        <filename>controller.php</filename>
        <folder>views</folder>
        <folder>language</folder>
    </files>

    <administration>
        <menu>SWA Universities</menu>
        <files folder="admin">
            <filename>swa_universities.php</filename>
            <filename>controller.php</filename>
            <folder>sql</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
    </administration>

</extension>