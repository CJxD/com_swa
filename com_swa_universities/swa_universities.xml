<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_swa_universities</name>
    <creationDate>July 2014</creationDate>
    <author>Adam</author>
    <version>0.0.1</version>
    <description>Swa Universities component</description>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

    <files folder="site">
        <filename>index.html</filename>
        <filename>swa_universities.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB/en-GB.com_swa_universities.ini</language>
    </languages>
    <administration>
        <menu img="components/com_swa_universities/assets/images/s_com_swa_universities.png" >COM_SWA_UNIVERSITIES_SWAMENU</menu>
        <submenu>
            
			<menu link="option=com_swa_universities&amp;view=universities" view="universities" img="components/com_swa_universities/assets/images/s_universities.png" alt="Swa_universities/Universities">COM_SWA_UNIVERSITIES_TITLE_UNIVERSITIES</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>swa_universities.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>language</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB/en-GB.com_swa_universities.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_swa_universities.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="swa_universities"/>
    </plugins>
    
</extension>
