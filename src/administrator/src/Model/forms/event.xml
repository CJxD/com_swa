<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id"
			type="text"
			default="0"
			label="ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="name"
			type="text"
			size="40"
			class="inputbox"
			label="Name"
			required="true"
			filter="safehtml"/>

		<field name="season_id"
			type="sql"
			key_field="id"
			value_field="year"
			query="SELECT id, year FROM #__swa_season ORDER BY id DESC"
			label="Season"
			required="true"
			filter="safehtml"/>

		<field name="capacity"
			type="text"
			size="40"
			class="inputbox"
			label="Capacity"
			required="true"
			filter="safehtml"/>

		<field name="date_open"
			type="calendar"
			class="inputbox"
			required="true"
			default="NOW"
			label="Registration open date"
			filter="safehtml"/>

		<field name="date_close"
			type="calendar"
			class="inputbox"
			required="true"
			default="NOW"
			label="Registration close date"
			filter="safehtml"/>

		<field name="date"
			type="calendar"
			class="inputbox"
			required="true"
			default="NOW"
			label="Event start date"
			filter="safehtml"/>

	</fieldset>

</form>
