<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id"
			type="text"
			default="0"
			label="ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="member_id"
			type="sql"
			key_field="id"
			value_field="id_name"
			query="SELECT m.id AS id, CONCAT(m.id, ' - ', u.name) AS id_name
			FROM #__swa_member AS m
			INNER JOIN #__users AS u ON m.user_id=u.id
			ORDER BY m.id DESC"
			label="User"
			required="true"
			filter="safehtml"/>

		<field name="university_id"
			type="sql"
			key_field="id"
			value_field="name"
			query="SELECT id, name FROM #__swa_university"
			label="University"
			required="true"
			filter="safehtml"/>

		<field name="committee"
			type="list"
			label="Committee Position"
			default="0"
			required="false">
			<option value="0">None</option>
			<option value="Committee">Committee</option>
		</field>

		<field name="graduated"
			type="checkbox"
			label="Graduated"
			default="0">
		</field>

	</fieldset>
</form>
