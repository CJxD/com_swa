<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id"
			type="text"
			default="0"
			label="ID"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

        <field name="university_id"
               type="sql"
               key_field="id"
               value_field="name"
               query="SELECT id, name FROM #__swa_university"
               label="University"
               filter="safehtml"
        />

		<field name="member_id"
			type="sql"
			key_field="id"
			value_field="member_name"
			query="SELECT member.id AS id, user.name AS member_name
			FROM #__swa_member AS member
			INNER JOIN #__users AS user ON member.user_id = user.id
			ORDER BY member.id DESC"
			label="User"
			required="true"
			filter="safehtml"
		/>


		<field name="date"
			type="date"
			label="Date Signed"
            default="yyyy-mm-dd"
			/>>

		<field name="signed"
			type="text"
			label="Signed"
            default="0"
		/>

		<field name="override"
			type="text"
			label="Override"
            default="0"
		/>

	</fieldset>

</form>
