<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="Id"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="user_id" type="sql" default="1" key_field="id" value_field="value"
			   query="SELECT users.id, CONCAT(users.name, ' ', IF(ISNULL(member.id), '', '(Already Member)')) as value FROM titan_users as users
LEFT JOIN titan_swa_member member ON member.user_id = users.id"

			   label="User"


			   required="true"
			   filter="safehtml"/>

		<field name="paid" type="checkbox" label="Paid" default="0">
		</field>

		<field name="sex" type="list"

			   label="Sex"
			   default="none"

			   required="true">
			<option value="Male">Male</option>
			<option value="Female">Female</option>
		</field>

		<field name="dob" type="calendar" class="inputbox"
			   required="true"

			   label="Dob"
			   filter="safehtml"/>

		<field name="university_id" type="sql" default="1" key_field="id" value_field="name"
			   query="SELECT id, name FROM #__swa_university"

			   label="University"


			   required="true"
			   filter="safehtml"/>

		<field name="club_committee" type="checkbox" label="Club Committee" default="0">
		</field>

		<field name="course" type="text" size="40" class="inputbox"

			   label="Course"


			   filter="safehtml"/>

		<field name="graduation" type="text" size="40" class="inputbox"

			   label="Graduation Year"


			   filter="safehtml"/>

		<field name="discipline" type="list"

			   label="Discipline"


				>
			<option value="None">None</option>
			<option value="Race">Race</option>
			<option value="Wave">Wave</option>
			<option value="Freestyle">Freestyle</option>
		</field>

		<field name="level" type="list"

			   label="Level"


			   required="true">
			<option value="Beginner">Beginner</option>
			<option value="Intermediate">Intermediate</option>
			<option value="Advanced">Advanced</option>
		</field>

		<field name="shirt" type="list"

			   label="Shirt"


			   required="true">
			<option value="XS">XS</option>
			<option value="S">S</option>
			<option value="M">M</option>
			<option value="L">L</option>
			<option value="XL">XL</option>
            <option value="8">8</option>
            <option value="10">10</option>
            <option value="12">12</option>
            <option value="14">14</option>
            <option value="16">16</option>
		</field>

		<field name="econtact" type="text" size="40" class="inputbox"

			   label="Emerg contact"


			   required="true"
			   filter="safehtml"/>

		<field name="enumber" type="text" size="40" class="inputbox"

			   label="Emerg number"


			   required="true"
			   filter="safehtml"/>

        <field name="dietary" type="list"

               label="Dietary Requirements?"
               default="None"

               required="true">
            <option value="NULL">None</option>
            <option value="Vegetarian">Vegetarian</option>
            <option value="Vegan">Vegan</option>
        </field>

		<field name="swahelp" type="list"

			   label="SWA help?"
			   default="None"

			   required="true">
			<option value="None">No thanks</option>
			<option value="Website">Website</option>
			<option value="Events">Events</option>
			<option value="Media">Media / Marketing</option>
		</field>

		<field name="swa_committee" type="checkbox" label="SWA Committee" default="0">
		</field>

	</fieldset>

</form>
